rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Exercícios são públicos para leitura, mas escrita requer ser admin (ou auth para MVP)
    match /exercicios/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Dados do usuário: apenas o próprio usuário pode acessar
    match /usuarios/{userId} {
      allow get, list, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subcoleções do usuário (treinos, favoritos, notificações)
    match /treinos/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /favoritos/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /notificacoes/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /treinos_historico/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra padrão: negar tudo mais
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


