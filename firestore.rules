rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função para verificar se está autenticado
    function isAuth() {
      return request.auth != null;
    }

    // Função para verificar se é administrador
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role.lower() == 'admin';
    }

    // Função para verificar se a conta está ativa (evita recursão infinita se o documento não existir)
    function isActive() {
      return isAuth() && 
        (!exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) || 
         get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.ativo != false);
    }

    // Função para verificar se é o dono do documento
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId && isActive();
    }

    // Exercícios: Público para leitura, escrita apenas para admins
    match /exercicios/{docId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // Usuários: Permite get básico para o próprio dono (necessário para isActive) ou admin
    match /usuarios/{userId} {
      allow get: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow update, delete: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuth();
    }

    // Coleções privadas do usuário: Dono (Ativo) ou Admin
    match /treinos/{userId}/{document=**} { allow read, write: if isOwner(userId) || isAdmin(); }
    match /favoritos/{userId}/{document=**} { allow read, write: if isOwner(userId) || isAdmin(); }
    match /notificacoes/{userId}/{document=**} { allow read, write: if isOwner(userId) || isAdmin(); }
    match /treinos_historico/{userId}/{document=**} { allow read, write: if isOwner(userId) || isAdmin(); }
    match /banco_horas/{userId}/{document=**} { allow read, write: if isOwner(userId) || isAdmin(); }

    // Conteúdo Gerenciado: Leitura pública, Escrita Admin
    match /treinos_sugeridos/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /artigos/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Configurações do Sistema
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Feedbacks de Treino: Alunos criam (se ativos), Admins leem/deletam tudo
    match /feedbacks/{docId} {
      allow read, delete: if isAdmin();
      allow create: if isAuth() && isActive(); 
    }

    // Feedbacks de Treino: Alunos criam, Admins leem tudo
    match /feedbacks/{docId} {
      allow read, delete: if isAuth() && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role.lower() == 'admin';
      allow create: if isAuth(); 
    }

    // Bloqueio padrão para qualquer outra coleção
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


